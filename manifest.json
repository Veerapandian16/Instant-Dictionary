{
  "manifest_version": 3,
  "name": "Instant Dictionary",
  "version": "1.0.0",
  "description": "Double-click a word on any webpage to see its definition and example sentence in a popup.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}